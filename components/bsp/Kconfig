menu "I2C configuration"
    
menu "Pin Configuration"
    config I2C_SDA
        int "I2C_SDA"
        default "16"
    config I2C_SCL
        int "I2C_SCL"
        default "17"
endmenu

config I2C_FREQ
    int "I2C Frequency"
    default "100000"
    help
        The I2C Frequency in Herz.
	
endmenu

menu "I2S configuration"
    
choice MCLK_SUPPORT
	prompt "I2S MCLK"
	default GPIO_SUPPORT

config PLL_SUPPORT
	bool "PLL_SUPPORT"
	help
		MCLK is generated by PLL.

config GPIO_SUPPORT
	bool "GPIO_SUPPORT"
	help
		MCLK is generated by GPIO.
endchoice

menu "Pin Configuration"
    config I2S_SCLK
        int "I2S_SCLK"
        default "33"
    config I2S_LRCK
        int "I2S_LRCK"
        default "25"
    config I2S_DOUT
        int "I2S_DOUT"
        default "26"
    config I2S_DIN
        int "I2S_DIN"
        default "27"
endmenu
	
endmenu
